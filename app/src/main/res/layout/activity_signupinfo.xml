<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <include layout="@layout/item_sign" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_80dp"
        android:paddingRight="@dimen/dimen_12dp"
        android:paddingTop="@dimen/dimen_15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSign1"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:background="@drawable/bg_signup_status_n"
                android:gravity="center"
                android:text="报名"
                android:textColor="@color/gray99"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_35dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvMsg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray33"/>

                <TextView
                    android:id="@+id/tvSignTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray99"
                    android:layout_marginTop="@dimen/dimen_5dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008c23"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>


        <View
            android:id="@+id/lineView1"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dimen_30dp"
            android:background="#ddd"
            android:layout_marginLeft="@dimen/dimen_28dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSign2"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:background="@drawable/bg_signup_status_n"
                android:gravity="center"
                android:text="初选"
                android:textColor="@color/gray99"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_35dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvMsg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray33"/>

                <TextView
                    android:id="@+id/tvSignTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray99"
                    android:layout_marginTop="@dimen/dimen_5dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008c23"
                android:textSize="@dimen/sp_12"/>


        </LinearLayout>


        <View
            android:id="@+id/lineView2"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dimen_30dp"
            android:background="#ddd"
            android:layout_marginLeft="@dimen/dimen_28dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSign3"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:background="@drawable/bg_signup_status_n"
                android:gravity="center"
                android:text="复选"
                android:textColor="@color/gray99"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_35dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvMsg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray33"/>

                <TextView
                    android:id="@+id/tvSignTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray99"
                    android:layout_marginTop="@dimen/dimen_5dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008c23"
                android:textSize="@dimen/sp_12"/>


        </LinearLayout>


        <View
            android:id="@+id/lineView3"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dimen_30dp"
            android:background="#ddd"
            android:layout_marginLeft="@dimen/dimen_28dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSign4"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:background="@drawable/bg_signup_status_n"
                android:gravity="center"
                android:text="定选"
                android:textColor="@color/gray99"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_35dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvMsg4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray33"/>

                <TextView
                    android:id="@+id/tvSignTime4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray99"
                    android:layout_marginTop="@dimen/dimen_5dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008c23"
                android:textSize="@dimen/sp_12"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_18dp"
            android:text="学校信息"
            android:textColor="@color/gray33"
            android:textSize="@dimen/sp_20" />

        <include layout="@layout/line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="-25dp"
            android:paddingRight="@dimen/dimen_5dp">

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputSchoolProvice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:editble="false"
                app:eidtHnit="请选择省份"
                app:title="学校所在地:"></com.zodiac.polit.widget.InputLayout>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputSchoolCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:editble="false"
                app:eidtHnit="请选择城市"
                app:title=""></com.zodiac.polit.widget.InputLayout>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputSchoolArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:editble="false"
                app:eidtHnit="请选择区县"
                app:title=""></com.zodiac.polit.widget.InputLayout>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputSchoolName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:editble="false"
                app:eidtHnit="请选择学校"
                app:title=""></com.zodiac.polit.widget.InputLayout>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputSchoolName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:title="学校名称" />

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputInOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:title="应/往届"
                app:isMust="false"
                app:editble="false"
                app:eidtHnit="请选择"/>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputScience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:title="文理科"
                app:isMust="false"
                app:editble="false"
                app:eidtHnit="请选择"/>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputMajor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:isMust="false"
                app:title="专业"/>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputTeamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:isMust="false"
                app:title="学员队"/>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputTeamLeaderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:isMust="false"
                app:title="队干部姓名"/>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputTeamLeaderPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:isMobile="true"
                app:isMust="false"
                app:title="干部手机号"/>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputEstimateHigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:title="高考预估"/>

            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputEstimate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:title="中考预估"
                app:editble="false"
                app:eidtHnit="请选择"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnCommit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_36dp"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginRight="@dimen/dimen_50dp"
            android:background="@drawable/bg_btn_blue"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
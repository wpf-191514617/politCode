<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_40dp"
        android:paddingRight="@dimen/dimen_50dp"
        android:paddingTop="@dimen/dimen_96dp"
        android:orientation="vertical">

        <com.zodiac.polit.widget.InputLayout
            android:id="@+id/inputOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="旧密码："
            app:eidtHnit="请输入旧密码"/>


        <com.zodiac.polit.widget.InputLayout
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18dp"
            app:title="新密码："
            app:eidtHnit="请输入登录密码"/>


        <com.zodiac.polit.widget.InputLayout
            android:id="@+id/inputPassword1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18dp"
            app:title="新密码："
            app:eidtHnit="请输入确认密码"/>


    </LinearLayout>


    <Button
        android:id="@+id/btnCommit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@drawable/bg_btn_blue"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:text="确认"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_46dp"/>



</LinearLayout>